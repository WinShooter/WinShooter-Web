<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" requirePermission="false" allowLocation="true" />
  </configSections>

  <connectionStrings>
    <add name="WinShooterConnection" providerName="System.Data.SqlClient" connectionString="Data Source=.\SQLExpress;Initial Catalog=WinShooter;Integrated Security=SSPI" />
  </connectionStrings>

  <log4net>
    <appender name="DebugAppender" type="log4net.Appender.DebugAppender">
      <immediateFlush value="true" />
      <layout type="log4net.Layout.SimpleLayout" />
    </appender>

    <!-- Set root logger level to DEBUG -->
    <root>
      <level value="DEBUG" />
      <appender-ref ref="DebugAppender" />
    </root>
  </log4net>
</configuration>