@{
    ViewBag.Title = "CompetitionRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="CompetitionController">
    <h1>{{competition.Name}}</h1>

    <form role="form">
        <div class="form-group">
            <label for="selectedCompetitionName">Namn:</label>
            <input class="form-control" id="selectedCompetitionName" ng-show="userCanUpdateCompetition" ng-model="competition.Name" />
            <p ng-show="!userCanUpdateCompetition">{{competition.Name}}</p>
        </div>
        <div class="form-group">
            <p><label for="newCompetitionStartDate">Startar datum:</label></p>
            <div style="display:inline-block; min-height:290px;" id="newCompetitionStartDate">
                <div class="well well-sm" ng-model="competition.StartDate">
                    <datepicker min="minDate" show-weeks="datePickerShowWeeks" format="datePickerFormat" starting-day="1"></datepicker>
                </div>
            </div>
            <div ng-model="competition.StartDate" style="display:inline-block;">
                <timepicker hour-step="'1'" minute-step="'15'" show-meridian="ismeridian"></timepicker>
            </div>
        </div>

        <div class="form-group">
            <label class="checkbox" for="selectedCompetitionIsPublic" ng-class="{checked: competition.IsPublic}">
                <input type="checkbox" value="" id="selectedCompetitionIsPublic" data-toggle="checkbox" />
                Publik tävling
            </label>
        </div>
        <div class="form-group">
            <label class="checkbox" for="selectedCompetitionUseNorwegianCount" ng-class="{checked: competition.UseNorwegianCount}">
                <input type="checkbox" id="selectedCompetitionUseNorwegianCount" data-toggle="checkbox" />
                Poängfältskytte
            </label>
        </div>
        <div class="form-group">
            <input type="button" class="btn btn-primary" value="Uppdatera" ng-show="userCanUpdateCompetition" ng-click="updateCompetition()" />
            <input type="button" class="btn btn-danger" value="Radera" ng-show="userCanDeleteCompetition" ng-click="deleteCompetition()" />
        </div>
    </form>
</div>
